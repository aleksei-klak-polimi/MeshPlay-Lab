# Path to logs folder relative to scripts
LOG_DIR="../../logs/db"

# Host and port for MariaDB (localhost for local dev)
DB_HOST=127.0.0.1
DB_PORT=3306

# Admin credentials for DB creation (used by create_db.sh and drop_db.sh)
# Used only for creation/deletion, never in app runtime
DB_ADMIN_USER=meshplay_admin
DB_ADMIN_PASSWORD='adminpass'



# ====== PRODUCTION DATABASE ======
# Application credentials (used by the Node/Java runtime during production)
DB_PROD_USER=meshplay_prod
DB_PROD_PASSWORD='prodpass'
# Name of the production database to create/manage
DB_PROD_NAME=MeshPlay-LabDB



# ====== DEVELOPMENT DATABASE ======
# Application credentials (used by Node/Java runtime during development and by seed_db.sh)
DB_DEV_USER=meshplay_dev
DB_DEV_PASSWORD='devpass'
# Name of the dev database to create/manage
DB_DEV_NAME=MeshPlay-LabDB_Dev
# Name of the .sql file to use to populate the dev DB with sample data
SEED_FILE='seed_dev.sql'



# ====== TESTING DATABASE ======
# Application credentials (used by Node/Java for integration and E2E testing)
DB_TEST_USER=meshplay_test
DB_TEST_PASSWORD='testpass'
# Name of the database to create/manage
DB_TEST_NAME=MeshPlay-LabDB_Test
# Name of the .sql file to use to populate the DB with sample data
SEED_FILE_TEST='seed_dev.sql'